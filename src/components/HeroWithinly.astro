---
import Button from './Button.astro'
import EmailSignup from './EmailSignup.astro'
import { Icon } from 'astro-icon/components'
import { getTranslationsFromUrl, getTranslation } from '../utils/useTranslation.js'

interface Props {
  showSignup?: boolean
  class?: string
}

const { showSignup = true, class: className } = Astro.props

// Get translations for current language
const translations = await getTranslationsFromUrl(Astro.url.pathname)
const t = (key: string, fallback = '') => {
  return getTranslation(translations, key, {}, fallback)
}
---

<section class:list={[className, 'hero-gradient-bg']}>
  <!-- Enhanced background effects -->
  <div class="hero-grid-pattern absolute inset-0" aria-hidden="true"></div>

  <!-- Floating animated shapes -->
  <div class="hero-floating-shapes">
    <div class="hero-shape-1" aria-hidden="true"></div>
    <div class="hero-shape-2" aria-hidden="true"></div>
    <div class="hero-shape-3" aria-hidden="true"></div>
    <div class="hero-shape-4" aria-hidden="true"></div>
  </div>

  <div class="hero-content mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="pt-20 pb-16 lg:pt-32 lg:pb-24">
      <div class="mx-auto max-w-4xl text-center">
        <!-- Main headline -->
        <h1 class="hero-text-shadow mb-6 text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
          <span class="text-gray-900">
            {t('hero.headline')}
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="mx-auto mb-10 max-w-3xl text-lg leading-relaxed text-gray-600 sm:text-xl">
          {t('hero.subheadline')}
        </p>

        <!-- Action area -->
        {
          showSignup ? (
            <div class="hero-glow mx-auto mb-12 max-w-lg rounded-2xl p-1">
              <EmailSignup
                variant="hero"
                showLabels={false}
                placeholder={t('signup.emailPlaceholder')}
                buttonText={t('hero.ctaPrimary')}
              />
            </div>
          ) : (
            <div class="hero-glow mb-12 flex flex-col items-center justify-center gap-4 rounded-2xl p-4 sm:flex-row">
              <Button href="#early-access" size="lg" variant="primary" icon="lucide:mail">
                {t('hero.ctaPrimary')}
              </Button>
              <Button href="#how-it-works" size="lg" variant="secondary" icon="lucide:badge-question-mark">
                {t('hero.ctaSecondary')}
              </Button>
            </div>
          )
        }

        <!-- Trust indicators -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-gray-500">
          <div class="flex items-center gap-2">
            <Icon name="lucide:shield-check" class="h-4 w-4 text-green-500" />
            <span>{t('hero.trustSignals.privacy')}</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="lucide:zap" class="h-4 w-4 text-yellow-500" />
            <span>{t('hero.trustSignals.instant')}</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="lucide:heart" class="h-4 w-4 text-red-500" />
            <span>{t('hero.trustSignals.humanCentered')}</span>
          </div>
        </div>

        <!-- Tagline -->
        <p class="mx-auto mt-8 max-w-md text-sm text-gray-500 italic">
          {t('hero.tagline')}
        </p>
      </div>
    </div>
  </div>
</section>
