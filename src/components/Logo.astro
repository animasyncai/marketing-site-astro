---
import { Icon } from 'astro-icon/components'

interface Props {
  /**
   * Size variant
   */
  size?: 'sm' | 'md' | 'lg'
  /**
   * Style variant
   */
  variant?: 'default' | 'header'
}

const { size = 'md', variant = 'default' } = Astro.props

// Size configurations
const sizeConfig = {
  sm: { iconSize: 'w-6 h-6' },
  md: { iconSize: 'w-8 h-8' },
  lg: { iconSize: 'w-10 h-10' },
}

const { iconSize } = sizeConfig[size]

// Style variants
const isHeader = variant === 'header'
---

<a
  href="/"
  class={`flex items-center gap-3 transition-colors !no-underline group ${
    isHeader ? 'text-gray-900 hover:text-primary' : 'text-gray-900 hover:text-primary'
  }`}
  aria-label="Withinly - Home"
>
  <!-- Custom logo icon -->
  <div
    class={`${iconSize} ${
      isHeader
        ? 'bg-gradient-to-br from-primary to-primary group-hover:from-primary group-hover:to-primary'
        : 'bg-gradient-to-br from-primary to-primary'
    } rounded-lg flex items-center justify-center shadow-sm group-hover:shadow-md transition-all`}
  >
    <Icon name="lucide:message-circle-heart" class="h-2/3 w-2/3 text-white" />
  </div>

  <!-- Brand name -->
  <span class={`font-bold text-2xl tracking-tight font-heading`}> Withinly </span>
</a>
