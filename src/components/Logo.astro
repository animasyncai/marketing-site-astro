---
import { Icon } from 'astro-icon/components'

interface Props {
  /**
   * Whether to load the image eagerly or lazily
   */
  loading?: 'eager' | 'lazy'
  /**
   * Size variant
   */
  size?: 'sm' | 'md' | 'lg'
  /**
   * Style variant
   */
  variant?: 'default' | 'header'
}

const { loading = 'eager', size = 'md', variant = 'default' } = Astro.props

// Size configurations
const sizeConfig = {
  sm: { iconSize: 'w-6 h-6', textSize: 'text-lg' },
  md: { iconSize: 'w-8 h-8', textSize: 'text-xl' },
  lg: { iconSize: 'w-10 h-10', textSize: 'text-2xl' },
}

const { iconSize, textSize } = sizeConfig[size]

// Style variants
const isHeader = variant === 'header'
---

<a
  href="/"
  class={`flex items-center gap-3 transition-colors group ${
    isHeader ? 'text-gray-900 hover:text-purple-600' : 'text-gray-900 hover:text-purple-600'
  }`}
  aria-label="Withinly - Home"
>
  <!-- Custom logo icon -->
  <div
    class={`${iconSize} ${
      isHeader
        ? 'bg-gradient-to-br from-gray-700 to-gray-900 group-hover:from-purple-600 group-hover:to-blue-600'
        : 'bg-gradient-to-br from-purple-600 to-blue-600'
    } rounded-lg flex items-center justify-center shadow-sm group-hover:shadow-md transition-all`}
  >
    <Icon name="lucide:brain" class="h-1/2 w-1/2 text-white" />
  </div>

  <!-- Brand name -->
  <span class={`font-bold ${textSize} tracking-tight`}> Withinly </span>
</a>
